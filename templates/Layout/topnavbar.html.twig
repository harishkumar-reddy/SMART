
<nav class="main-header navbar navbar-expand navbar-white navbar-light layout-navbar-fixed">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item hashelp" data-help-title='Shrink nav bar' data-help-msg='Click to shrink and expand the left nav bar.'>
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        {% if peaklist is defined %}
            {% for item in peaklist %}
                <li class="nav-item d-none d-sm-inline-block hashelp"  data-help-title='{{ item.help_title is defined ? item.help_title : 'Help' }}' data-help-msg='{{ item.help_message is defined ? item.help_message : 'Help text not available' }}'>
                    <i class="{{ item.icon is defined ? item.icon : 'fas fa-map-pin' }}"></i>
                    <a href="{{ item.link }}" class="nav-link">{{ item.label }}</a>
                </li>
            {% endfor %}
        {% endif %}
    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3">
        <div class="input-group input-group-sm ">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-navbar hashelp" type="submit"  data-help-title='Search' data-help-msg='Search content in entire application.'>
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- Notifications Dropdown Menu -->
        <li class="nav-item" onclick="customeActions.shoHelp(this)">
            <a class="nav-link" href="#">
                <i class="far fa-question-circle"></i>
            </a>
        </li>
        <li class="nav-item dropdown hashelp"  data-help-title='Notifications' data-help-msg='Find notifications in a tray. List top 10 notifications and view all action to list all notifications in another screen. Note: Unread notifications are appear in strong format'>
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-bell"></i>
                {% if unread_count is defined and unread_count > 0 %}
                    <span class="badge badge-warning navbar-badge">{{ unread_count }}</span>
                {% endif %}
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-item dropdown-header">{{ notifications_count is defined? notifications_count : 0 }} Notifications</span>
                <div class="dropdown-divider"></div>
                {% if notifications is defined %}
                    {% for key, item in notifications %}
                        {% if key > 0 %}
                            <div class="dropdown-divider"></div>
                        {% endif %}
                        <a href="#" class="dropdown-item {{ item.is_read == false? 'text-bold' }}">
                            <i class="fas fa-envelope mr-2"></i> {{ item.message }}
                            <span class="float-right text-muted text-sm">{{ item.date }}</span>
                        </a>
                    {% endfor %}
                {% endif %}

                <div class="dropdown-divider"></div>
                <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
            </div>
        </li>
        <li class="nav-item hashelp" data-help-title='User' data-help-msg='Click to show user tray with user profile and other relevant actions.'>
            <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#">
                <i class="far fa-user-circle"></i>
            </a>
        </li>
    </ul>
</nav>
<!-- /.navbar -->
